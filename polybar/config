[colors]
background = #2e3440
foreground = #d8dee9
primary = #81a1c1
secondary = #5e81ac
alert = #bf616a
green = #a3be8c

[bar/main]
width = 100%
height = 24
offset-x = 0%
offset-y = 0%
radius = 0.0
bottom = false

; Определяет, на каком мониторе запускается, $MONITOR берется из launch.sh
monitor = ${env:MONITOR}

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
border-size = 0

padding-left = 1
padding-right = 1

module-margin = 1

; Шрифт FontAwesome для иконок должен быть установлен в системе!
font-0 = DejaVu Sans Mono:size=10;2
font-1 = FontAwesome:size=10;2

; Модули выравниваются по левому, центру и правому краю
modules-left = i3 xwindow
modules-center = date
modules-right = cpu memory filesystem network wifi_status volume

enable-ipc = true

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scope = ws

label-mode-padding = 2
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.primary}

; Активный рабочий стол
label-state-focused = %index%
label-state-focused-foreground = ${colors.background}
label-state-focused-background = ${colors.primary}
label-state-focused-padding = 1

; Неактивный рабочий стол
label-state-unfocused = %index%
label-state-unfocused-padding = 1

; Занятый рабочий стол
label-state-urgent = %index%
label-state-urgent-background = ${colors.alert}
label-state-urgent-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title%
format-maxlen = 50

[module/filesystem]
type = internal/fs
interval = 25
mount-point = /
; Используем иконку  (FontAwesome file icon)
label-mounted = %{F#0000FF}%{F-} %percentage_used%%
label-mounted-foreground = ${colors.foreground}

[module/volume]
type = internal/volume
; Используем иконки /
format-volume = %{F#A3BE8C}%{F-} <label-volume>
label-volume = %percentage%%
label-muted = %{F#BF616A} mute
format-muted = <label-muted>

[module/network]
type = internal/network
interface = enp4s0 
interval = 1.0
accumulate-stats = true
; Используем иконку 
format-connected = %{F#8FBCBB} %{F-} <label-connected>
format-disconnected = %{F#BF616A} E: down
label-connected = %downspeed:9% | %upspeed:9%

[module/wifi_status]
type = internal/network
interface = wlp5s0 
interval = 1.0
; Используем иконку 
format-connected = %{F#8FBCBB} %{F-} 
format-disconnected = %{F#BF616A} W:off

[module/cpu]
type = internal/cpu
interval = 0.5
; Используем иконку 
format = %{F#5E81AC}%{F-} <label>
label = %percentage%%

[module/memory]
type = internal/memory
interval = 1
; Используем иконку 
format = %{F#B48EAD}%{F-} <label>
label = %percentage_used%%

[module/date]
type = internal/date
interval = 1
time = %H:%M
time-alt = %Y-%m-%d %H:%M:%S
label = %time%

[settings]
screenchange-reload = true
pseudo-transparency = true

